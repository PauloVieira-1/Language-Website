{
  "name": "language-website",
  "version": "1.0.0",
  "description": "- Obtain `secrets.json.gz` - Make sure the file is in the root directory or pass the file path as an argument to the command below - run `npm run set-up` - run `npm run dev`",
  "main": "./server/app.js",
  "module": "",
  "scripts": {
    "start": "dotenvx run --env-file=./config/.env.production -- node ./dist/app.js",
    "build": "tsc -p ./config/tsconfig.json",
    "dev": "dotenvx run --env-file=./config/.env.dev -- nodemon --config ./config/nodemon.json server/app.ts",
    "watch": "dotenvx run --env-file=./config/.env.dev --webpack --config ./config/webpack.config.js --watch",
    "set-up": "node ./config/set-up-util.js load"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^0.20.1",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "http-errors": "~1.6.3",
    "mongoose": "^8.2.0",
    "pug": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "babel-loader": "^9.1.3",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2"
  }
}
